//- 浏览器头文件属性设置
mixin commonMeta
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="description", content="")
    meta(name="Keywords", content="")
    meta(name="viewport", content="maximum-scale=1.0 , minimum-scale=1.0 , user-scalable=0 , width=device-width , initial-scale=1.0" )


//- 公共头部链接
mixin commonLink(baseUrl)
    link(rel="icon", href=baseUrl + "images/favicon.ico", type="image/x-icon")
    link(rel="shortcut icon", href=baseUrl + "images/favicon.ico", type="image/x-icon")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")
    link(rel="stylesheet", href= baseUrl + "lib/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet", href=baseUrl + "common/common.css")

//-公用脚本
mixin commonScript(baseUrl)
    script(src=baseUrl + "lib/jquery-1.11.2.min.js")
    script(src=baseUrl + "lib/bootstrap/js/bootstrap.min.js")
    script(src=baseUrl + "lib/layer/layer.js")
    script(src=baseUrl + "wyxm-constant.js")
    script(src=baseUrl + "common/util.js")
    script(src=baseUrl + "common/common.js")

mixin anthenScript(baseUrl)
    script(src=baseUrl + "lib/jquery.cookie.js")
    script(src=baseUrl + "lib/jquery.base64.js")

//页面基本元素
doctype html
html
    head
        block head
    body
        block body
        block header
        block footer
